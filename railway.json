{
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "node server.js",
    "healthcheckPath": "/api/health",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_VERSION": "20",
        "NIXPACKS_CACHE": "false",
        "NIXPACKS_NO_CACHE": "true"
      }
    }
  }
}
