{
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "node start-server.js",
    "healthcheckPath": "/api/health",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_VERSION": "18",
        "NIXPACKS_CACHE": "false",
        "NIXPACKS_NO_CACHE": "true",
        "NIXPACKS_PYTHON_VERSION": "3.11"
      }
    }
  }
}
