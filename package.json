{
  "name": "youtube-pulse",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "실시간 유튜브 트렌드 분석 플랫폼",
  "author": "YouTube Pulse Team",
  "main": "electron/main.mjs",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && node scripts/copy-server.js",
    "build:dev": "vite build --mode development && node scripts/copy-server.js",
    "start": "node start-server.js",
    "start:railway": "node start-server.js",
    "lint": "eslint .",
    "preview": "vite preview",
    "collect:dry": "node scripts/collect-dry-run.js",
    "collect:data": "node scripts/collect-data.js",
    "collect:today": "node scripts/collect-today.js",
    "sync:indexeddb": "node dist/server/tools/sync-indexeddb.js",
    "verify:date-rule": "node scripts/assert-collection-date.js",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:8080 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:dist": "npm run build && electron-builder --publish=never",
    "cache:clear": "rm -rf dist && rm -rf node_modules/.vite && echo 'Cache cleared'",
    "cache:clear:win": "if exist dist rmdir /s /q dist && if exist node_modules\\.vite rmdir /s /q node_modules\\.vite && echo Cache cleared",
    "type-check": "tsc --noEmit",
    "deploy": "gh-pages -d dist",
    "deploy:full": "node scripts/deploy.js",
    "health-check": "node scripts/health-check.js",
    "health-check:with-auto": "node scripts/health-check.js --test-auto-collect",
    "e2e-test": "node scripts/e2e-verification.js",
    "verify:all": "npm run health-check && npm run e2e-test",
    "diagnostic": "node scripts/diagnostic-tools.js",
    "ops:check": "npm run diagnostic && npm run verify:all",
    "metrics": "node scripts/metrics-collector.js",
    "ops:full": "npm run metrics && npm run ops:check"
  },
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-switch": "^1.1.1",
    "@radix-ui/react-toast": "^1.2.2",
    "@radix-ui/react-tooltip": "^1.1.3",
    "@types/react-window": "^1.8.8",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "embla-carousel-react": "^8.6.0",
    "express": "^5.1.0",
    "fast-glob": "3.3.2",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.460.0",
    "next-themes": "^0.4.4",
    "node-cron": "^4.2.1",
    "pg": "^8.12.0",
    "react": "^18.3.1",
    "react-day-picker": "^8.10.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.52.1",
    "react-router-dom": "^6.30.1",
    "react-window": "^2.2.0",
    "recharts": "^2.15.4",
    "serve": "^14.2.5",
    "sonner": "^1.7.4",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "vaul": "^0.9.1",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "globals": "^16.4.0",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.46.0",
    "vite": "^5.3.1",
    "wait-on": "^7.0.1"
  }
}
